<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#010103">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="left|top">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_gravity="left|center_vertical"
            android:background="#ffffff"
            android:textSize="40dp"
            android:text="1234"
            android:textAlignment="gravity"
            android:gravity="center_vertical|right"
            android:longClickable="true"
            android:padding="5dp" />

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="5dp">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MC"
                    android:id="@+id/buttonMC"
                    android:layout_column="0"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M+"
                    android:id="@+id/buttonMPlus"
                    android:layout_column="1"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M-"
                    android:id="@+id/buttonMMinus"
                    android:layout_column="2"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MR"
                    android:id="@+id/buttonMR"
                    android:layout_column="3"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="C"
                    android:id="@+id/buttonC"
                    android:layout_column="0"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-+ "
                    android:id="@+id/buttonPlusMinus"
                    android:layout_column="1"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:singleLine="false" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="/"
                    android:id="@+id/buttonDiv"
                    android:layout_column="2"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X"
                    android:id="@+id/buttonMult"
                    android:layout_column="3"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:id="@+id/button7"
                    android:layout_column="0"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:id="@+id/button8"
                    android:layout_column="1"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:id="@+id/button9"
                    android:layout_column="2"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:id="@+id/buttonMinus"
                    android:layout_column="3"
                    android:textSize="25dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white" />

            </TableRow>

            <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:id="@+id/button4"
                android:layout_column="0"
                android:textSize="25dp"
                android:layout_weight="1"
                android:textColor="@android:color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:id="@+id/button5"
                android:layout_column="1"
                android:textSize="25dp"
                android:layout_weight="1"
                android:textColor="@android:color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:id="@+id/button6"
                android:layout_column="2"
                android:textSize="25dp"
                android:layout_weight="1"
                android:textColor="@android:color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/buttonPlus"
                android:layout_column="3"
                android:textSize="25dp"
                android:layout_weight="1"
                android:textColor="@android:color/white" />

        </TableRow>

        </TableLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="5dp">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:id="@+id/button1"
                android:textSize="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_weight="2"
                android:textColor="@android:color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:text="2"
                android:id="@+id/button2"
                android:layout_toRightOf="@+id/button1"
                android:textSize="25dp"
                android:textColor="@android:color/white"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="3"
                android:id="@+id/button3"
                android:layout_toRightOf="@+id/button2"
                android:textSize="25dp"
                android:textColor="@android:color/white"/>

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="="
                android:id="@+id/buttonEqual"
                android:layout_alignTop="@+id/button3"
                android:layout_alignBottom="@+id/buttonComa"
                android:textSize="25dp"
                android:layout_toRightOf="@+id/button3"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="93dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/buttonZero"
                android:layout_alignTop="@+id/buttonComa"
                android:layout_alignParentLeft="true"
                android:textSize="25dp"
                android:layout_alignRight="@+id/button2"
                android:textColor="@android:color/white" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text=","
                android:id="@+id/buttonComa"
                android:layout_below="@+id/button3"
                android:layout_toRightOf="@+id/button2"
                android:textSize="25dp"
                android:textColor="@android:color/white" />/>

        </RelativeLayout>

    </LinearLayout>
</FrameLayout>